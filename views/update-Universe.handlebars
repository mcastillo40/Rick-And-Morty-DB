<h2>Update {{universe.name}}</h2>
<br>
<form class="col-sm-8" id="updateUniverse" action="/updateThisUniverse" method="post" validate>
    <div class="form-group" hidden="true">
        <input type="number" class="form-control" id="id" name="id" value="{{universe.universe_id}}">
    </div>

    <div class="form-group">
        <label for="name">Name</label> 
        <input type="text" class="form-control" id="name" name="name" value="{{universe.name}}" required>
    </div>
    <div class="form-group">
        <label for="population">Population</label>
        <input type="number" class="form-control" id="population" name="population" value="{{universe.population}}">
    </div>
    <div class="form-group">
        <label for="species">Species</label>
        <input type="text" class="form-control" id="species" name="species" value="{{universe.species}}">
    </div>

    <div class="form-group row">
        <div class="col-sm-12" id="submitArea">
            <button id="submitUniverse" type="submit" class="btn btn-dark submitButton">Submit</button>
        </div>
    </div>
</form>