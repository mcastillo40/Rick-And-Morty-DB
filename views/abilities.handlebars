<h2>Create An Attack Type</h2>
<form class="col-sm-8" id="addUniverse" action="/addAbility" method="post" validate>

        <div class="form-group">
        <label for="abilityName">Ability Name</label> 
        <input type="text" class="form-control" id="abilityName" name="abilityName" required>
    </div>
    <div class="form-group">
        <label for="power">Power</label>
        <input type="number" class="form-control" id="power" name="power">
    </div>

    <div class="form-group row">
        <div class="col-sm-12" id="submitArea">
            <button id="submitUniverse" type="submit" class="btn btn-dark submitButton">Submit</button>
        </div>
    </div>
</form>


<div id="characterTable" class="col-sm-10" role="tablist">
     {{#each mAttack}}

    <div class="card">
        <div class="card-header Rick_Title" role="tab" id="heading{{attack_id}}">
            <h5 class="mb-0">
                <a data-toggle="collapse" href="#collapse{{attack_id}}" aria-expanded="true" aria-controls="collapse{{attack_id}}">
                <p id="name{{attack_id}}">{{ability}} </p>
                </a>
            </h5>
        </div>

        <div id="collapse{{attack_id}}" class="collapse" role="tabpanel" aria-labelledby="heading{{attack_id}}" data-parent="#accordion">
            <div class="card-body">
                <table id="displayMortys">
                    <tr>
                        <td> <strong> ABILITY: </strong> </td>
                        <td> {{ability}} </td> 
                    </tr>
                    <tr>
                        <td> <strong>POWER: </strong> </td> 
                        <td> {{power}} </td> 
                    </tr>
                </table>
                <div class="options">
                    <span class="rightAlign"> <button type="button" class="btn btn-secondary" onclick="updateAbility({{attack_id}})">Update</button> </span>&emsp;
                    <span class="rightAlign"> <button type="button" class="btn btn-secondary" onclick="deleteAbility({{attack_id}})">Delete</button> </span>
                </div>
            </div>
        </div>
    </div>

    {{/each}}
 
</div>

<script src="/static/src/ability/editability.js" defer></script>
<script src="/static/src/ability/deleteability.js" defer></script>