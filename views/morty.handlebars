<h2>Create A Morty</h2>
<form class="col-sm-8" id="addMorty" action="/addMorty" method="post">
    <div class="form-group" hidden="true">
        <label for="mortyID"></label>
        {{#each mortyLastID}}
            <input type="number" class="form-control" id="mortyID" name="mortyID" value="{{maxMortyID}}">
        {{/each}}
    </div>
        <div class="form-group">
        <label for="mortyfName">Name</label> <small>(Appends Morty at the end of name)</small>
        <input type="text" class="form-control" id="mortyfName" name="mortyfName" required>
    </div>
    <div class="form-group" hidden="true" >
        <label for="mortylName"></label>
        <input type="text" class="form-control" id="mortylName" name="mortylName" value="Morty">
    </div>
    <div class="form-group">
        <label for="mortyLevel">Level</label>
        <input type="number" class="form-control" id="mortyLevel" name="mortyLevel">
    </div>
    <div class="form-group">
        <label for="mortyHealth">Health</label>
        <input type="number" class="form-control" id="mortyHealth" name="mortyHealth">
    </div>
    <div class="form-group">
        <label for="mortyDefense">Defense</label>
        <input type="number" class="form-control" id="mortyDefense" name="mortyDefense">
    </div>

    <div class="form-group">
        <label for="mortyAttack">Attack</label>
        <select class="form-control selectOption" id="mortyAttack" name="mortyAttack">
            {{#each mAttack}}
                <option value="{{attack_id}}">{{ability}} &emsp; Power: {{power}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group row">
        <div class="col-sm-12" id="submitArea">
            <button id="submitMorty" type="submit" class="btn btn-dark submitButton">Submit</button>
        </div>
    </div>
</form>


<div id="characterTable" class="col-sm-10" role="tablist">
    {{#each morty}}

    <div class="card">
        <div class="card-header Rick_Title" role="tab" id="heading{{morty_id}}">
            <h5 class="mb-0">
                <a data-toggle="collapse" href="#collapse{{morty_id}}" aria-expanded="true" aria-controls="collapse{{morty_id}}">
                <p id="name{{morty_id}}">{{fname}} {{lname}}</p>
                </a>
            </h5>
        </div>

        <div id="collapse{{morty_id}}" class="collapse" role="tabpanel" aria-labelledby="heading{{morty_id}}" data-parent="#accordion">
            <div class="card-body">
                <table id="displayMortys">
                    <tr>
                        <td> <strong> Level: </strong> </td>
                        <td> {{level}} </td> 
                        <td class="left_indent"> <strong>Health:</strong> </td> 
                        <td> {{health}} </td> 
                        <td class="left_indent"> <strong>Defense:</strong> </td> 
                        <td> {{defense}} </td> 
                    </tr>
                </table>
                <div id="{{morty_id}}">
                    <strong>Attack:</strong>
                </div>
                <div class="options">
                    <span class="rightAlign"> <button type="button" class="btn btn-secondary" onclick="updateMorty({{morty_id}})">Update</button> </span>&emsp;
                    <span class="rightAlign"> <button type="button" class="btn btn-secondary" onclick="deleteMorty({{morty_id}})">Delete</button> </span>
                </div>
            </div>
        </div>
    </div>

    {{/each}}
 
</div>

<script src="/static/src/morty/editMorty.js"></script>
<script src="/static/src/morty/deleteMorty.js"></script>
<script src="/static/src/morty/mortyDOM.js"></script>

