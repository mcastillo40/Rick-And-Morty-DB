<h2>Create A Dimension</h2>
<form class="col-sm-8" id="addUniverse" action="/addUniverse" method="post" validate>

        <div class="form-group">
        <label for="universeName">Name</label> 
        <input type="text" class="form-control" id="universeName" name="universeName" required>
    </div>
    <div class="form-group">
        <label for="population">Population</label>
        <input type="number" class="form-control" id="population" name="population">
    </div>
    <div class="form-group">
        <label for="species">Species</label>
        <input type="text" class="form-control" id="species" name="species">
    </div>

    <div class="form-group row">
        <div class="col-sm-12" id="submitArea">
            <button id="submitUniverse" type="submit" class="btn btn-dark submitButton">Submit</button>
        </div>
    </div>
</form>


<div id="characterTable" class="col-sm-10" role="tablist">
     {{#each dimension}}

    <div class="card">
        <div class="card-header Rick_Title" role="tab" id="heading{{universe_id}}">
            <h5 class="mb-0">
                <a data-toggle="collapse" href="#collapse{{universe_id}}" aria-expanded="true" aria-controls="collapse{{universe_id}}">
                <p id="name{{universe_id}}">{{name}} </p>
                </a>
            </h5>
        </div>

        <div id="collapse{{universe_id}}" class="collapse" role="tabpanel" aria-labelledby="heading{{universe_id}}" data-parent="#accordion">
            <div class="card-body">
                <table id="displayMortys">
                    <tr>
                        <td> <strong> Population: </strong> </td>
                        <td> {{population}} </td> 
                    </tr>
                    <tr>
                        <td> <strong>Species:</strong> </td> 
                        <td> {{species}} </td> 
                    </tr>
                </table>
                <div class="options">
                    <span class="rightAlign"> <button type="button" class="btn btn-secondary" onclick="updateUniverse({{universe_id}})">Update</button> </span>&emsp;
                    <span class="rightAlign"> <button type="button" class="btn btn-secondary" onclick="deleteUniverse({{universe_id}})">Delete</button> </span>
                </div>
            </div>
        </div>
    </div>

    {{/each}}
 
</div>

<script src="/static/src/universe/editUniverse.js" defer></script>
<script src="/static/src/universe/deleteUniverse.js" defer></script>